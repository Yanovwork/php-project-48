#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] 

Options:
  -h --help                     
  -v --version                  
  --format <fmt>                

DOC;

$args = Docopt::handle($doc, array('version'=>'Generate diff 1.0', '--format <fmt>'=>'<firstFile> <secondFile>'));
foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL;
